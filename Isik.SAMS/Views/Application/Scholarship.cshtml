@using (Html.BeginForm("Scholarship", "Application", FormMethod.Post, new Dictionary<string, object>() {
    { "class", "form-horizontal" },
    { "role", "form" },
    { "id", "Scholarship" },
    { "data-selector", "modalContainer" }
}))
{
    @Html.AntiForgeryToken();
    @Html.HiddenFor(model => model.Id)

    <div class="row">
        <div class="form-group col-md-6" id="ddlLanguageProficiency">
            <label class="req" for="code">Language Proficiency</label>
            @Html.DropDownListFor(model => model.Scholarship, ViewBag.ScholarshipOptions as SelectList, "Select One", new { @class = "form-control" })
        </div>
    </div>
    <div class="buttons">
        <button class="btn btn-md btn-danger pull-left" data-dismiss="modal">Close</button>
        <button class="btn btn-md btn-success pull-right" type="submit" OnClick="">Save</button>
    </div>
}


