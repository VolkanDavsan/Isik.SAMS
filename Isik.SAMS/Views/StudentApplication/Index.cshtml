    <style>
        .req::after {
            content: "*";
            margin-left: 5px;
            color: #f00;
        }

        .form-horizontal .form-group > label:not(.k-checkbox-label) {
            text-transform: uppercase;
            margin-bottom: 0px !important;
            position: absolute;
            font-weight: bold;
            font-size: 12px;
            z-index: 99;
            background: #fff;
            padding: 3px;
            left: 5px;
            top: -12px;
            color: black;
        }

        .radio-buttons {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            padding: 10px;
        }

            .radio-buttons input[type="radio"] {
                display: none;
            }

            .radio-buttons label {
                text-align: center;
            }

        .img {
            height: 177px;
            width: 177px;
        }

        .Bachelor-div:hover {
            border: 0.5px solid black;
        }

        .Master-div:hover {
            border: 0.5px solid black;
        }

        .Phd-div:hover {
            border: 0.5px solid black;
        }

        input[type=radio]:checked + label > img {
            content: url('../../Assets/img/selected.jpg');
        }

        .inline {
            display: inline-block;
            background-color: white;
            border: 0.5px solid rgba(152, 152, 152, 0.49);
            margin: 10px;
