<body class="sidebar-noneoverflow">
    <div class="header-container fixed-top">
        <header class="header navbar navbar-expand-sm">
            <ul class="navbar-nav flex-row text-center" style="margin-left:2%;">
                <li class="nav-item theme-text">
                    <a href="@Url.Action("Index", "StudentApplication", new { area = "" })" class="nav-link">
                        <img src="~/Assets/img/workoftimebeyaz.png" style="height:44px;" alt="logo" />
                    </a>
                </li>
            </ul>
            <ul class="navbar-item flex-row search-ul">
                <li class="nav-item align-self-center search-animated">
                    <div class="field-wrapper" style="float:right;">
                        <button type="button" class="btn btn-primary" onclick="location.href = '@Url.Action("Index", "Login")'">Log In</button>
                    </div>
                </li>
            </ul>
        </header>

        <div id="content" class="main-content">
            <div class="layout-px-spacing">
                <div class="row layout-top-spacing">
                    <div class="radio-buttons">
                        <p style="text-align:center; font-size:22px;">Application Form</p>
                        <div class="form-check" style="margin-top:20px">
                            @{
                                foreach (var a in (Dictionary<int, string>)ViewBag.Programs)
                                {
                                    string img = a.Value + ".jpg";
                                    <div class="inline @a.Value-div">
                                        @Html.RadioButtonFor(model => model.ProgramId, a.Key, new { @id = a.Value, @class = "pull-right" })
                                        <label for="@a.Value">
                                            <img class="img" src="~/Assets/img/@img" /><br />
                                            @a.Value
                                        </label>
                                    </div>
                                }
                            }
                        <div class="buttons">
                            <button class="btn btn-primary pull-right" type="submit" onclick="redirect(); return false;">Next</button>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>

        function redirect() {
            debugger;
            var rblPrograms = document.getElementsByName("ProgramId");
            for (i = 0; i < rblPrograms.length; i++) {
                if (rblPrograms[i].checked) {
                    return location.href = "/StudentApplication/InsertInitial?id=" + rblPrograms[i].value;
                }
            }
        }
    </script>
